body{
  font-family: Inter,ui-sans-serif,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica Neue,Arial,Noto Sans,sans-serif,"Apple Color Emoji","Segoe UI Emoji",Segoe UI Symbol,"Noto Color Emoji";

  #categories-popover{
    position: fixed;
    right: 50px;
    bottom: 200px;
    width: 170px;


    .categories-popover-bag{
      box-shadow: 0 -3px 2px rgba(255,255,255,.1);
      height: 40px;
      transform: translateX(-20px);
      background: var(--gradient-dark);
      border-bottom-left-radius: 10px;
      border-bottom-right-radius: 10px;
      border-top: 0;
      width: calc(100% + 40px);
    }
    
    .categories-popover-item{
      background: var(--gradient-dark);
      font-size: 14px;
      padding: 20px 20px 50px;
      margin-bottom: -30px;
      box-shadow: 0 0 5px rgba(255,255,255,.2);
      line-height: 1;
      border-top-right-radius: 10px;
      border-top-left-radius: 10px;
      transform: translateY(0);
      transition: all .15s ease;
      font-weight: 700;
      overflow: hidden;
      color: var(--font-color);
      position: relative;
      cursor: pointer;

      &:hover{
        transform: translateY(-10px);

        .categories-popover-item-title{
          color: var(--font-color);
        }

        .categories-popover-item-desc{
          color: var(--font-color);
        }
      }

      .categories-popover-item-title{
        font-weight: bold;
        font-size: 16px;
        color: var(--light-font-color);
      }

      .categories-popover-item-desc{
        font-weight: bold;
        margin-top: 10px;
        font-size: 13px;
        color: var(--deep-light-font-color);
      }

      .categories-popover-item-tag{
        position: absolute;
        right: -0;
        top: -0;
        background: var(--secondary);
        text-align: center;
        width: 20px;
        border-bottom-left-radius: 10px;
        padding: 7px;
        color: #fff;
        opacity: 0.8;
        
      }

    }

    
  }

  .else{
    font-size: 16px;
  }

  h2.category{
    -webkit-text-stroke-color: rgba(170,170,170,1);
    -webkit-text-stroke-width: 2px;
    color: transparent !important;
    font-weight: bolder;
    font-size: 8em;
    opacity: 0.3;
    position: relative;
    min-height: 100px;


    b{
      color: transparent !important;
    }

    span{
      position: absolute;
      top: 2px;
      left: -50px;
      right: 0;
      bottom: 0;
    }
  }


  .typed-text{
    font-family: 'Inter', sans-serif;
  }


}