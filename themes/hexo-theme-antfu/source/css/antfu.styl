#categories-popover{
  position: fixed;
  right: 60px;
  bottom: 200px;
  width: 170px;


  .categories-popover-bag{
    box-shadow: 0 -3px 2px rgba(255,255,255,.05);
    height: 40px;
    transform: translateX(-20px);
    background: var(--gradient-dark);
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    border-top: 0;
    width: calc(100% + 40px);
  }
  
  .categories-popover-item{
    background: var(--gradient-dark);
    font-size: 14px;
    padding: 20px 20px 50px;
    margin-bottom: -30px;
    box-shadow: 0 0 5px rgba(255,255,255,.1);
    line-height: 1;
    border-top-right-radius: 10px;
    border-top-left-radius: 10px;
    transform: translateY(0);
    transition: all .15s ease;
    font-weight: 700;
    overflow: hidden;
    color: var(--font-color);
    position: relative;
    cursor: pointer;

    &:hover{
      transform: translateY(-10px);
    }

    .categories-popover-item-title{
      font-weight: bold;
      font-size: 16px;
    }

    .categories-popover-item-desc{
      font-weight: bold;
      margin-top: 10px;
      font-size: 13px;
      color: var(--light-font-color);
      opacity: .3;
    }

    .categories-popover-item-tag{
      position: absolute;
      right: -0;
      top: -0;
      background: #3f3850;
      text-align: center;
      width: 20px;
      border-bottom-left-radius: 10px;
      padding: 7px;
      color: #fff;
      
    }

  }

  
}